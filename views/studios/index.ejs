<main class="container">
  <div class="columns is-multiline">
    <% studios.forEach(studio => { %>
      <div class="column is-one-quarter-desktop is-half-tablet">
      <a href="/studios/<%= studio._id %>">
        <div class="card">
          <div class="card-image">
            <figure class="image is-2by1">
              <img class="studioImage" src="<%= studio.image %>" alt="<%= studio.name %>">
            </figure>
          </div>
          <div class="card-content">
          <div class="columns">
          <div class="column">
            <h3 class="title is-5"><%= studio.name %></h3>
            <h4 class="subtitle is-6"><%= studio.location %></h4>
            </div>
            <div class="column ratingColumn">
            <h4 class="subtitle is-6"><%= studio.avgRating %></h4>
            </div>
            </div>
          </div>
        </div>
      </div>
      </a>
      <% }) %>
  </div>
</main>
