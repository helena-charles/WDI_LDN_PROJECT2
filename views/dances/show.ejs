<div class="container">
  <div class="columns">
    <div class="column">
      <figure class="image">
        <img src="<%= dance.image %>" alt="<%= dance.danceClass %>">
      </figure>
    </div>
    <div class="column">
      <h3 class="title"><%= dance.danceClass %></h3>
      <div class="icon is-small">
        <i class="fa fa-pencil"></i>
      </div>
      <p><%= dance.content %></p>
      <p><%= dance.avgRating %> Stars</p>

      <% if(locals.isAuthenticated) { %>
        <a href="/dances/<%= dance._id %>/edit" class="button is-primary">Edit</a>
        <form method="POST" action="/dances/<%= dance._id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button class="button is-danger">Delete</button>
        </form>

        <hr />

<ul class="comments">
  <% dance.comments.forEach(comment => { %>
    <li>
    <div class="box">
    <% if(comment.isOwnedBy(locals.currentUser)) { %>
      <form class="delete" method="POST" action="/dances/<%= dance._id %>/comments/<%= comment._id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button class="delete">x</button>
      </form>
      <% } %>
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <%= comment.content %>
            </p>
            <% if(comment.user) { %>
            <strong><%= comment.user.username %></strong>
            <% } %>
          </div>
        </div>
      </article>
      </div>
    </li>
  <% }) %>
</ul>


        <form method="POST" action="/dances/<%= dance._id %>/comments">
        <textarea class="textarea" name="content"></textarea>
        <p>Rating: <input type="text" name="rating"></input></p>
        <button class="button is-primary">Submit</button>
        </form>
      <% } %>
    </div>
  </div>
</div>
