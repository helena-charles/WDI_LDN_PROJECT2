<main class="container">

      <form class="sort">
        <select name="category">
          <option>All</option>
        <% categories.forEach(category => { %>
          <option<% if(category === selectedCategory) { %> selected<% } %>><%= category %></option>
          <% }) %>
          </select>
          <button>Go</button>
      </form>

  <div class="columns is-multiline">
    <% dances.forEach(dance => { %>
      <div class="column is-one-quarter-desktop is-half-tablet">
      <a href="/dances/<%= dance._id %>">
        <div class="card">
          <div class="card-image">
            <figure class="image is-3by2">
              <img src="<%= dance.image %>" alt="<%= dance.danceClass %>">
            </figure>
          </div>
          <div class="card-content">
            <h3 class="title"><%= dance.danceClass %></h3>
            <h4 class="subtitle"><%= dance.studio %></h4>
            <h4 class="subtitle">Average Rating: <%= dance.avgRating %></h4>
            <h4 class="subtitle"><%= dance.category %></h4>
          </div>
        </div>
      </div>
      </a>
      <% }) %>
  </div>

</main>
